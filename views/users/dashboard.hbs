<section class="mx-auto m-10 p-6 bg-base-100">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-primary">Dashboard</h1>
            <p class="text-base-content/70">Welcome back, {{userFullName}}</p>
        </div>
        <a href="/users/sign-out" class="btn btn-outline btn-error btn-sm">Sign Out</a>
    </div>

    <div class="mb-8">
        <ul class="list bg-base-100 rounded-box shadow-md">
            <li class="p-4 pb-2 tracking-wide">Files List</li>

            {{#each uploadedFiles}}
            <li class="list-row">
                <div class="list-col-grow">
                    <div>{{ this.originalName }}</div>
                </div>
                <button class="btn btn-square btn-ghost">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
                    </svg>
                </button>
                <button class="btn btn-square btn-ghost">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                </button>
            </li>
            {{/each}}
        </ul>
    </div>

    <div class="card bg-base-200 w-full">
        <div class="card-body">
            {{#if error}}
                <p class="my-3 text-red-600">{{error}}</p>
            {{/if}}

            {{#if message}}
                <p class="my-3 text-green-600">{{message}}</p>
            {{/if}}

            <h3 class="card-title mb-2 text-lg">File Upload</h3>

            <form action="/documents/upload" method="POST" enctype="multipart/form-data" class="space-y-4">
                <div class="form-control w-full">
                    <input type="file" 
                           name="document" 
                           class="file-input file-input-bordered file-input-primary w-full" />
                </div>

                <div class="card-actions justify-start mt-4">
                    <button type="submit" class="btn btn-primary w-full md:w-auto px-10">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>